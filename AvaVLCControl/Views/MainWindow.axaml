<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaVLCControl.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vlcsharp="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaVLCControl.Views.MainWindow"
		xmlns:controls="using:AvaVLCControl.Views"
        Icon="/Assets/avalonia-logo.ico"
        Title="Avalonia VLC Player embedded in User Control">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

	<Grid 
		RowDefinitions="Auto,*" 
		ColumnDefinitions="*">

		<controls:Controls 
			Grid.Row="0" 
			Grid.Column="0"/>

		<controls:PlayerControl
			Name="Player"
			Grid.Row="1"
			Grid.Column="0"/>
		
		
	</Grid>
</Window>
